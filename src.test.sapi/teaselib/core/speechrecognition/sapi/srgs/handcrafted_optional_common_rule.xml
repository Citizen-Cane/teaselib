<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<grammar xmlns="http://www.w3.org/2001/06/grammar" root="Main" tag-format="semantics/1.0" version="1.0" xml:lang="en-US">
  <rule id="Main" scope="private">
    <one-of>
      <item>
        <ruleref uri="#r_0_0_1"/>
        <ruleref uri="#r_1_0,1_2"/>
        <one-of>
        <!-- Empty item makes other items optional -->
          <item>
          </item>
          <item>
	        <ruleref uri="#r_2_0_4"/>
          </item>
        </one-of>
      </item>
      <item>
        <ruleref uri="#r_0_1_3"/>
        <ruleref uri="#r_1_0,1_2"/>
        <!-- Repeating an item 0 times makes it optional -->
        <item repeat="0-1">
          <ruleref uri="#r_2_1_5"/>
        </item>
      </item>
    </one-of>
  </rule>
  <rule id="r_0_0_1" scope="private">
    <one-of>
      <item>Yes Miss</item>
      <item>Yes</item>
    </one-of>
  </rule>
  <rule id="r_0_1_3" scope="private">
    <one-of>
      <item>No Miss</item>
      <item>No</item>
    </one-of>
  </rule>
  <rule id="r_1_0,1_2" scope="private">of course</rule>
  <rule id="r_2_0_4" scope="private">Miss</rule>
  <rule id="r_2_1_5" scope="private">not Miss</rule>
</grammar>
